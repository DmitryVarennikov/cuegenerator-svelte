{
  "name": "cuegenerator-v2",
  "version": "1.0.0",
  "private": true,
  "description": "Cuegenerator monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "turbo run test",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "pre-deploy": "turbo run pre-deploy",
    "deploy": "npm run pre-deploy && firebase deploy --only hosting --project cuegenerator-v2 --json",
    "dev": "turbo run dev",
    "simple-hooks:install": "npx simple-git-hooks",
    "postinstall": "npm run simple-hooks:install && npx playwright install --with-deps",
    "firebase": "firebase"
  },
  "author": "Dmitry Varennikov",
  "license": "ISC",
  "devDependencies": {
    "firebase-tools": "^12.3.0",
    "simple-git-hooks": "^2.8.1",
    "turbo": "^1.10.1"
  }
}
