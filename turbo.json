{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".svelte-kit/**", ".vercel/**", "public/**"]
    },
    "lint": {},
    "format": {},
    "test": {
      "dependsOn": ["build"]
    },
    "pre-deploy": {
      "dependsOn": ["lint", "test"]
    },
    "deploy": {
      "dependsOn": ["pre-deploy"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
