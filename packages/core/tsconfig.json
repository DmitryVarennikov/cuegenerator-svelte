{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "es6",
    "lib": ["es5", "dom"],
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "declaration": true
  },
  "include": ["src/**/*.ts"]
}
